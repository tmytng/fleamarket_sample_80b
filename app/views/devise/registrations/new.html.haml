!!!
%html
  %head
    %meta{content: "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title FURIMA
    %meta{content: "authenticity_token", name: "csrf-param"}/
    %meta{content: "Wmwb/zn41an8dk1rTNQCPsuR7COsom1mLMWcHF+LM8p0IWVUo2eQnKcomDh0ZdWbhnhdyR5QLT1utxxeCoEbRw==", name: "csrf-token"}/
    %link{"data-turbolinks-track" => "reload", href: "/assets/sign_up.scss", media: "all", rel: "sign_up"}/
  %body
    .Form-logo
      %img{alt: "image", src: "/assets/logo.png"}/
  .Form-main
    .From-box
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .From-box__title
          %h2 新規会員登録
        .From-box__field
          %p ニックネーム
          = f.text_field :nickname, class: 'form', placeholder: '例：フリママン'
        .From-box__field
          %p メールアドレス
          = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form', placeholder: '例：◯◯◯◯◯◯@◯◯◯◯◯◯'
        .From-box__field
          %p パスワード
          - if @minimum_password_length
            (#{@minimum_password_length} characters minimum)
            = f.password_field :password, autocomplete: "new-password", class: 'form', placeholder: '7文字以上'
        .From-box__field
          %p パスワード（確認用）
          = f.password_field :password_confirmation, autocomplete: "new-password", class: 'form', placeholder: '例：上記と同じパスワードを入力して下さい'
        .From-box__field
          %p アイコン画像
          = f.file_field :user_image, class: 'form'
        .From-box__field
          %p 自己紹介
          = f.text_field :profile, class: 'form', placeholder: '例：こんにちは！'
        .From-box__field--name
          .family_name
            %p 苗字
            = f.text_field :family_name, class: 'form', placeholder: '例：山田'
          .first_name
            %p 名前
            = f.text_field :first_name, class: 'form', placeholder: '例：太郎'
        .From-box__field--kana
          .family_name_kana
            %p フリガナ（苗字）
            = f.text_field :family_name_kana, class: 'form', placeholder: '例：ヤマダ'
          .first_name_kana
            %p フリガナ（名前）
            = f.text_field :first_name_kana, class: 'form', placeholder: '例：タロウ'
        .From-box__field
          %p 生年月日
          = f.text_field :birth_day, class: 'form', placeholder: '例：2020-01-01 (-で区切って入力)'
        .From-box__btn
          = f.submit "Sign up",value: '登録', class: 'btn'
        -# .From-box__sign_in
          -# = render "devise/shared/links"